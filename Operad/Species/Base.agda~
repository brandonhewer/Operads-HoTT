{-# OPTIONS --cubical --no-import-sorts --safe #-}

module Operad.Species.Base where

open import Cubical.Data.Nat

open import Cubical.Foundations.HLevels
open import Cubical.Foundations.Prelude
open import Cubical.Foundations.Structure

open import Operad.FinSet

hSpecies : HLevel → ∀ ℓ₁ ℓ₂ → Type (ℓ-suc (ℓ-max ℓ₁ ℓ₂))
hSpecies n ℓ₁ ℓ₂ = FinSet ℓ₁ → TypeOfHLevel ℓ₂ n

Species : ∀ ℓ₁ ℓ₂ → Type (ℓ-suc (ℓ-max ℓ₁ ℓ₂))
Species ℓ₁ ℓ₂ = FinSet ℓ₁ → Type ℓ₂ 

n-Unit : ∀ {ℓ₁ ℓ₂} → ℕ → Species ℓ₁ ℓ₂ → Type _
n-Unit n K = ∀ X → n ≡ card X → K X

*Species : ∀ ℓ₁ ℓ₂ → ℕ → Type (ℓ-suc (ℓ-max ℓ₁ ℓ₂))
*Species ℓ₁ ℓ₂ n = Σ[ K ∈ Species ℓ₁ ℓ₂ ] n-Unit n K
